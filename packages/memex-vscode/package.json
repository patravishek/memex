{
  "name": "memex-vscode",
  "displayName": "Memex",
  "description": "Persistent project memory for AI coding agents. Works with Cursor, Copilot, Claude, Ollama, and any MCP-compatible tool â€” paid or free.",
  "version": "0.5.7",
  "publisher": "patravishek",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/patravishek/memex"
  },
  "bugs": {
    "url": "https://github.com/patravishek/memex/issues"
  },
  "homepage": "https://github.com/patravishek/memex#readme",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "AI",
    "Chat",
    "Other"
  ],
  "keywords": [
    "ai",
    "memory",
    "claude",
    "cursor",
    "copilot",
    "agent",
    "context",
    "mcp",
    "ollama",
    "llm",
    "local-llm",
    "persistent-memory",
    "model-context-protocol",
    "coding-assistant",
    "developer-tools",
    "session",
    "history",
    "groq",
    "openai",
    "anthropic"
  ],
  "galleryBanner": {
    "color": "#130824",
    "theme": "dark"
  },
  "activationEvents": [
    "workspaceContains:.memex/memex.db"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "memex",
          "title": "Memex",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "memex": [
        {
          "id": "memex.memoryPanel",
          "type": "webview",
          "name": "Memory"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "memex.saveObservation",
          "when": "editorHasSelection",
          "group": "9_cutcopypaste@99"
        }
      ],
      "view/title": [
        {
          "command": "memex.refresh",
          "when": "view == memex.memoryPanel",
          "group": "navigation"
        },
        {
          "command": "memex.setupMcp",
          "when": "view == memex.memoryPanel",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "memex.saveObservation",
        "title": "Save to Memex"
      },
      {
        "command": "memex.setupMcp",
        "title": "Memex: Setup MCP",
        "icon": "$(plug)"
      },
      {
        "command": "memex.refresh",
        "title": "Memex: Refresh Panel",
        "icon": "$(refresh)"
      }
    ]
  },
  "scripts": {
    "build": "node esbuild.mjs",
    "watch": "node esbuild.mjs --watch",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies",
    "publish-ovsx": "ovsx publish --no-dependencies"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.0.0",
    "esbuild": "^0.25.0",
    "ovsx": "^0.9.0",
    "typescript": "^5.7.0"
  }
}
